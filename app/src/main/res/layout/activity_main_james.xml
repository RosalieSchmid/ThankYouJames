<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainJames">

    <ImageView
        android:id="@+id/header_image"
        android:src="@drawable/test_image"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ImageView>

    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_image"
        android:layout_alignTop="@+id/header_image"
        android:layout_alignRight="@+id/header_image"
        android:layout_alignBottom="@+id/header_image"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="@string/main_header_text"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="50sp"
        ></TextView>

    <Button
        android:id="@+id/header_burger_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/header_image"
        android:text="B"
        />

    <Button
        android:id="@+id/header_shopping_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/header_image"
        android:layout_alignRight="@+id/header_image"
        android:text="WK"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_james_offer_text"
        android:layout_below="@+id/header_image"
        android:layout_centerHorizontal="true"
        android:text="@string/main_offer_text"
        android:textSize="20sp"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:id="@+id/main_james_offer_one"
        android:layout_below="@id/main_james_offer_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>


    <ImageButton
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:id="@+id/main_james_offer_two"
        android:layout_below="@id/main_james_offer_text"
        android:layout_toRightOf="@id/main_james_offer_one"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>


</RelativeLayout>