<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_1">

    <ImageView
        android:id="@+id/header_image_menu2"
        android:src="@drawable/test_image"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ImageView>

    <TextView
        android:id="@+id/header_text_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_image_menu2"
        android:layout_alignTop="@+id/header_image_menu2"
        android:layout_alignRight="@+id/header_image_menu2"
        android:layout_alignBottom="@+id/header_image_menu2"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="@string/main_header_text"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="50sp"
        ></TextView>

    <Button
        android:id="@+id/header_burger_button_menu2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/header_image_menu2"
        android:text="B"
        />

    <Button
        android:id="@+id/header_shopping_button_menu2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/header_image_menu2"
        android:layout_alignRight="@+id/header_image_menu2"
        android:text="WK"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/header_image_menu2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submeal_no1_menu2"
            android:layout_below="@id/header_image"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submeal_no2_menu2"
            android:layout_below="@id/submeal_no1_menu2"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submeal_no3_menu2"
            android:layout_below="@id/submeal_no2_menu2"
            />


    </LinearLayout>


</RelativeLayout>